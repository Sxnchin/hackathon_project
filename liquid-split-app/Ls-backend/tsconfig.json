{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.js",
    "scripts/**/*.js",
    "test/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
