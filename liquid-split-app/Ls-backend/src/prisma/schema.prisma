// Prisma schema for LiquidSplit
// Real-time fractional ownership of purchases

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// üë§ User Model
// =====================
model User {
  id              Int         @id @default(autoincrement())
  name            String
  email           String      @unique
  password        String      // bcrypt hashed password
  walletAddress   String?     @unique // Ethereum wallet address
  role            UserRole    @default(USER)
  balance         Float       @default(0)
  stripeAccountId String?     @unique
  isActive        Boolean     @default(true)
  emailVerified   Boolean     @default(false)
  lastLogin       DateTime?
  refreshToken    String?     // JWT refresh token
  createdPots     Pot[]       @relation("UserCreatedPots")
  pots            PotMember[] // pots user participates in
  receipts        Receipt[]   @relation("UserReceipts") // receipts paid by this user
  auditLogs       AuditLog[]  // security audit trail
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

// =====================
// üîê User Roles Enum
// =====================
enum UserRole {
  ADMIN       // Full system access
  USER        // Standard user
  MODERATOR   // Can manage pots and receipts
}

// =====================
// üìã Audit Log Model
// =====================
model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?
  action     String   // e.g., "NFT_MINTED", "POT_CREATED", "USER_LOGIN"
  resource   String?  // e.g., "Receipt:123", "Pot:45"
  ipAddress  String?
  userAgent  String?
  metadata   Json?    // Additional context
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// =====================
// üíß Pot Model
// =====================
model Pot {
  id          Int         @id @default(autoincrement())
  name        String
  totalAmount Float       @default(0)
  creatorId   Int?
  members     PotMember[] // relation through join table
  receipts    Receipt[]   @relation("PotReceipts") // receipts linked to this pot
  createdAt   DateTime    @default(now())

  creator User? @relation("UserCreatedPots", fields: [creatorId], references: [id], onDelete: SetNull)
}

// =====================
// ü§ù PotMember (Join Table)
// =====================
model PotMember {
  id     Int   @id @default(autoincrement())
  userId Int
  potId  Int
  share  Float @default(0)

  // Relations
  user User @relation(fields: [userId], references: [id])
  pot  Pot  @relation(fields: [potId], references: [id], onDelete: Cascade)

  @@unique([userId, potId]) // prevents duplicate entries
}

// =====================
// üßæ Receipt Model
// =====================
model Receipt {
  id          Int      @id @default(autoincrement())
  potId       Int
  payerId     Int
  amount      Float
  timestamp   DateTime @default(now())
  description String?
  merchantName String?
  purchaseDate DateTime @default(now())
  currency    String   @default("USD")
  imageUrl    String?

  // üé® NFT Fields - Enhanced for Production
  nftMinted        Boolean   @default(false)
  nftTokenId       String?   @unique
  nftTxHash        String?
  nftContractAddr  String?
  nftIpfsHash      String?
  nftMetadataUrl   String?
  nftOwner         String?   // Ethereum address
  nftMintedAt      DateTime?
  nftOpenseaUrl    String?
  nftEtherscanUrl  String?
  nftVoucherSig    String?   // Lazy mint signature
  nftVoucherNonce  String?   // Prevents replay attacks
  nftClaimable     Boolean   @default(false) // If voucher created
  nftClaimed       Boolean   @default(false) // If user claimed on-chain

  pot   Pot  @relation("PotReceipts", fields: [potId], references: [id], onDelete: Cascade)
  payer User @relation("UserReceipts", fields: [payerId], references: [id])

  @@index([nftMinted])
  @@index([nftClaimable])
  @@index([potId])
  @@index([payerId])
}
