// Prisma schema for LiquidSplit
// Real-time fractional ownership of purchases

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// üë§ User Model
// =====================
model User {
  id              Int            @id @default(autoincrement())
  name            String
  email           String         @unique
  password        String         // bcrypt hashed password
  balance         Float          @default(0)
  stripeAccountId String?        @unique
  createdPots     Pot[]          @relation("UserCreatedPots")
  pots            PotMember[]    // pots user participates in
  receipts        Receipt[]      @relation("UserReceipts") // receipts paid by this user
  friendships      Friend[]          @relation("UserFriendships") // friendships initiated by this user
  friendOf         Friend[]          @relation("FriendOf") // friendships where this user was added
  createdGroups    Group[]           @relation("UserCreatedGroups") // groups created by this user
  groupMemberships GroupMember[]     // groups user is a member of
  groupInvitations GroupInvitation[] // group invitations received by this user
  notifications    Notification[]    // notifications received by this user
  createdAt        DateTime          @default(now())
}

// =====================
// üíß Pot Model
// =====================
model Pot {
  id            Int            @id @default(autoincrement())
  name          String
  totalAmount   Float          @default(0)
  status        String         @default("PENDING") // PENDING, FINALIZED
  creatorId     Int?
  members       PotMember[]    // relation through join table
  receipts      Receipt[]      @relation("PotReceipts") // receipts linked to this pot
  notifications Notification[] // notifications related to this pot
  createdAt     DateTime       @default(now())

  creator User? @relation("UserCreatedPots", fields: [creatorId], references: [id], onDelete: SetNull)
}

// =====================
// ü§ù PotMember (Join Table)
// =====================
model PotMember {
  id            Int    @id @default(autoincrement())
  userId        Int
  potId         Int
  share         Float  @default(0)
  paymentStatus String @default("PENDING") // PENDING, PAID, DENIED

  // Relations
  user User @relation(fields: [userId], references: [id])
  pot  Pot  @relation(fields: [potId], references: [id], onDelete: Cascade)

  @@unique([userId, potId]) // prevents duplicate entries
}

// =====================
// üßæ Receipt Model
// =====================
model Receipt {
  id          Int      @id @default(autoincrement())
  potId       Int
  payerId     Int
  amount      Float
  timestamp   DateTime @default(now())
  description String?

  pot   Pot  @relation("PotReceipts", fields: [potId], references: [id], onDelete: Cascade)
  payer User @relation("UserReceipts", fields: [payerId], references: [id])
}

// =====================
// üë• Friend Model
// =====================
model Friend {
  id        Int      @id @default(autoincrement())
  userId    Int      // User who initiated the friendship
  friendId  Int      // User being added as friend
  status    String   @default("accepted") // accepted, pending, blocked
  createdAt DateTime @default(now())

  user   User @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("FriendOf", fields: [friendId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId]) // prevents duplicate friendships
}

// =====================
// üë™ Group Model
// =====================
model Group {
  id          Int               @id @default(autoincrement())
  name        String
  creatorId   Int
  members     GroupMember[]
  invitations GroupInvitation[]
  createdAt   DateTime          @default(now())

  creator User @relation("UserCreatedGroups", fields: [creatorId], references: [id], onDelete: Cascade)
}

// =====================
// ü§ù GroupMember (Join Table)
// =====================
model GroupMember {
  id      Int @id @default(autoincrement())
  groupId Int
  userId  Int

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId]) // prevents duplicate memberships
}

// =====================
// üì® GroupInvitation Model
// =====================
model GroupInvitation {
  id        Int      @id @default(autoincrement())
  groupId   Int
  userId    Int      // User being invited
  status    String   @default("pending") // pending, accepted, declined
  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId]) // prevents duplicate invitations
}

// =====================
// üîî Notification Model
// =====================
model Notification {
  id                 Int      @id @default(autoincrement())
  userId             Int      // User receiving the notification
  potId              Int?     // Related pot (if applicable)
  friendRequestId    Int?     // Related friend request (if applicable)
  groupInvitationId  Int?     // Related group invitation (if applicable)
  type               String   // PAYMENT_REQUEST, PAYMENT_DENIED, FRIEND_REQUEST, GROUP_INVITATION
  message            String
  status             String   @default("UNREAD") // UNREAD, READ
  createdAt          DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  pot  Pot?  @relation(fields: [potId], references: [id], onDelete: Cascade)
}
