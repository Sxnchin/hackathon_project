# =====================
# DATABASE
# =====================
DATABASE_URL="postgresql://user:password@host:port/database"

# =====================
# JWT SECRETS
# =====================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-CHANGE-THIS-IN-PRODUCTION"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# =====================
# BLOCKCHAIN - Polygon zkEVM (Ultra-Low Gas Costs)
# =====================
# Contract address (will be set after deployment)
NFT_CONTRACT_ADDRESS=""

# Private key for signing transactions (NO 0x prefix)
PRIVATE_KEY="your-private-key-here"

# RPC URLs
POLYGON_ZKEVM_RPC="https://rpc.cardona.zkevm-rpc.com"  # Testnet
# POLYGON_ZKEVM_MAINNET_RPC="https://zkevm-rpc.com"  # Mainnet

# Chain ID
CHAIN_ID="2442"  # Cardona testnet
# CHAIN_ID="1101"  # zkEVM mainnet

# =====================
# IPFS - Pinata
# =====================
PINATA_API_KEY="your-pinata-api-key"
PINATA_SECRET_KEY="your-pinata-secret-key"

# =====================
# STRIPE
# =====================
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# =====================
# SERVER CONFIG
# =====================
NODE_ENV="development"  # or "production"
PORT="4000"
CORS_ORIGIN="http://localhost:5173"  # Frontend URL

# =====================
# LOGGING
# =====================
LOG_LEVEL="info"  # debug, info, warn, error

# =====================
# OPTIONAL
# =====================
# For contract verification
POLYGONSCAN_API_KEY=""

# For gas reporting
COINMARKETCAP_API_KEY=""
REPORT_GAS="false"
